# Server Configuration
NODE_ENV=development
PORT=5000
APP_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:8081

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/farmtrade
DB_NAME=farmtrade

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-farmtrade-2024
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-farmtrade-2024

# OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_CALLBACK_URL=/api/auth/google/callback

FACEBOOK_CLIENT_ID=your-facebook-client-id-from-app
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret-from-app
FACEBOOK_CALLBACK_URL=/api/auth/facebook/callback

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Email Configuration
EMAIL_USER=denzilserrao77@gmail.com
EMAIL_APP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@cropkart.com
APP_NAME=CropKart

# Gmail Setup Instructions:
# 1. Enable 2-Factor Authentication on Gmail
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate App Password for "Mail"
# 4. Use the 16-character app password (not your regular password)

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Configuration (Razorpay)
VITE_RAZORPAY_KEY_ID=rzp_test_your_test_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# API Configuration
API_URL=http://localhost:5000/api

# Feature Flags
ENABLE_GOOGLE_AUTH=false
ENABLE_FACEBOOK_AUTH=false  
ENABLE_EMAIL_AUTH=true

# Production Overrides (copy to .env.production)
# NODE_ENV=production
# FRONTEND_URL=https://cropkart.com
# API_URL=https://api.cropkart.com/api
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/farmtrade
# ENABLE_GOOGLE_AUTH=true
# ENABLE_FACEBOOK_AUTH=true
# VITE_RAZORPAY_KEY_ID=rzp_live_your_live_key